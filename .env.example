NEXT_PUBLIC_GOOGLE_ANALYTICS=<Your_tracking_ID>
NEXT_PUBLIC_URL=https://avatar.leix.dev
GEMINI_API_KEY=<Your_Gemini_API_Key>

# Supabase Configuration
# Get these from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (keep this secret, never expose to client)
# Used for server-side operations that bypass RLS
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Configuration
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Webhook Secret
# Get this when setting up webhooks: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs
# Create these in your Stripe dashboard: https://dashboard.stripe.com/products
STRIPE_CREDITS_SMALL_PRICE_ID=price_xxx
STRIPE_CREDITS_MEDIUM_PRICE_ID=price_xxx
STRIPE_CREDITS_LARGE_PRICE_ID=price_xxx

# Credits pack sizes (how many credits are granted per successful checkout)
CREDITS_PACK_SMALL=100
CREDITS_PACK_MEDIUM=500
CREDITS_PACK_LARGE=2000

# Billing config (ensure profit >= 3x token cost)
SITE_FREE_DAILY_LIMIT=1
CREDIT_USD_VALUE=0.05
PROFIT_MULTIPLIER=3
GEMINI_INPUT_USD_PER_1M=0.35
GEMINI_OUTPUT_USD_PER_1M=0.7
AI_OUTPUT_TOKENS_ESTIMATE=2000
MIN_CREDITS_PER_GENERATION=1
